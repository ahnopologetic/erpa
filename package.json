{
  "name": "erpa",
  "displayName": "Erpa",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "ahnopologetic <stahn1995@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "pnpm with-env plasmo build",
    "package": "pnpm with-env plasmo package",
    "with-env": "dotenv -e .env --",
    "fix-underscores": "node postbuild/sed.js"
  },
  "dependencies": {
    "@ahnopologetic/use-prompt-api": "workspace:*",
    "@electric-sql/pglite": "^0.3.11",
    "@plasmohq/storage": "^1.15.0",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@xenova/transformers": "^2.17.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "ogl": "^1.0.11",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@parcel/config-default": "^2.16.0",
    "@parcel/transformer-typescript-tsc": "^2.16.0",
    "@types/chrome": "0.0.258",
    "@types/dom-speech-recognition": "^0.0.7",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "dotenv-cli": "^10.0.0",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "sidePanel",
      "offscreen",
      "tabCapture",
      "scripting"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "background": {
      "service_worker": "background.ts"
    },
    "commands": {
      "toggle-sidepanel": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Open the sidepanel"
      },
      "semantic-search": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "Command+Shift+F"
        },
        "description": "Focus semantic search"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "offscreen.html",
          "permission.html",
          "audio-test.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
