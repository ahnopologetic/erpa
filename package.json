{
  "name": "erpa",
  "displayName": "Erpa",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "ahnopologetic <stahn1995@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ahnopologetic/use-prompt-api": "workspace:*",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "ogl": "^1.0.11",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "0.0.258",
    "@types/dom-speech-recognition": "^0.0.7",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "jsdom": "^24.0.0",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "vitest": "^1.2.2"
  },
  "manifest": {
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "sidePanel",
      "offscreen",
      "tabCapture",
      "scripting"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.ts"
    },
    "commands": {
      "toggle-sidepanel": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Open the sidepanel"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "offscreen.html",
          "permission.html",
          "audio-test.html"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
